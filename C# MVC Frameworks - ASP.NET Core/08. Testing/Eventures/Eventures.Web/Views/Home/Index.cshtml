@{
	ViewData["Title"] = "Home";
}

<div class="jumbotron eventures-bg-color">
	@if (this.User.Identity.IsAuthenticated)
	{
		<div class="text-center">
			@if (this.User.IsInRole("ADMIN"))
			{
				<h2 class="font-weight-bold">Greetings, Administrator - @this.User.Identity.Name!</h2>
				<hr class="hr-3 bg-color-grey" />
				<h4 class="text-color-grey font-weight-bold">Enjoy your work.</h4>
			}
			else
			{
				<h2 class="font-weight-bold">Welcome, @this.User.Identity.Name!</h2>
				<hr class="hr-3 bg-color-grey" />
				<h4 class="text-color-grey font-weight-bold">Eventures wishes you an exciting experience.</h4>
			}
		</div>
	}
	else
	{
		<h2 class="font-weight-bold">Eventures - The best ticket service in the world.</h2>
		<hr class="hr-3 bg-dark" />
		<h4 class="font-weight-bold"><a asp-controller="Account" asp-action="Login">Login</a> to start "eventing".</h4>
		<p>
			<h4 class="font-weight-bold"><a asp-controller="Account" asp-action="Register">Register</a> if you don't have an account.</h4>
		</p>
	}
</div>
